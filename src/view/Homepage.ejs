<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Users Table</title>
    <link rel="stylesheet" href="/css/styles.css"/>
  </head>
  <body>
    <ul>
      <li><a href="/" class="active">Home</a></li>
      <li><a href="/create-user">New User</a></li>
    </ul>

    <h2 style="text-align: center; margin-top: 20px;">Users List</h2>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Address</th>
          <th>Age</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (User && User.length > 0) { %>
          <% User.forEach(function(user) { %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.address %></td>
              <td><%= user.age %></td>
              <td>
                <div class="action-buttons">
                  <form action="/update-user/<%= user.id %>" method="GET">
                    <button type="submit" class="update-btn">Update</button>
                  </form>
                  <form action="/delete-user/<%= user.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
                    <button type="submit" class="delete-btn">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" style="text-align: center;">No users found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
